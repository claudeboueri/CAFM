<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.example.owner.cafm.MakeRequest">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:paddingBottom="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Service Request"
            android:gravity="center"
            android:textColor="@color/Blue"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="Project"
            android:paddingTop="10dp"
            android:textColor="@color/Blue" />

        <EditText
            android:id="@+id/Project_Name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/edit_text_username"
            android:hint="Enter Project Name"
            android:paddingLeft="10dp"
            android:layout_weight="0.01" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Building"
            android:textColor="@color/Blue" />

        <EditText
            android:id="@+id/building"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_username"
            android:hint="Enter Building Name"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/Floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Floor"
            android:textColor="@color/Blue" />

        <EditText
            android:id="@+id/floor"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_username"
            android:hint="Enter Floor Number"
            android:inputType="number"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/Recepient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Recipient"
            android:textColor="@color/Blue" />

        <Spinner
            android:id="@+id/recipient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_text_username"/>

        <TextView
            android:id="@+id/Emergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Emergency Level"
            android:textColor="@color/Blue" />

        <Spinner
            android:id="@+id/Emergency_Level"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_text_username"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="Description"
            android:paddingTop="10dp"
            android:textColor="@color/Blue" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/edit_text_username"
            android:hint="Description"
            android:paddingLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

           <!-- <Button
                android:id="@+id/take_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/login_button"
                android:text="Take a Picture"
                android:textColor="@color/White" />-->

            <Button
                android:id="@+id/upload_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/login_button"
                android:text="Upload Image"
                android:textColor="@color/White" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_margin="10dp"
            android:background="@drawable/login_button"
            android:text="Clear Request"
            android:textColor="@color/White"
            android:layout_weight="0.08" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_margin="10dp"
            android:background="@drawable/login_button"
            android:text="Submit Request"
            android:textColor="@color/White" />


    </LinearLayout>

</ScrollView>
